{{#extend "jumbotron"}}
<div id="jumbotron" class="jumbotron meetups">
  <div class="container">
    <h1>Meetup groups</h1>
    <p>Checkout Node.js meetup groups near you<p>
  </div>
</div>
{{/extend}}

<div class="col-sm-9 blog-main">

  {{> flash}}

  <div class="container-fluid">
    <div class="row row-margin-bottom">
      {{#each meetups}}
        <div class="col-md-12 no-padding">
          <div class="lib-panel">
            <div class="row box-shadow zero-margin">
              <div class="col-md-4 no-padding">
                <a href="/meetups/{{slug}}">
                  <img class="lib-img-show" {{#if image_url}}src="/img/320/{{image_url}}"{{else}}data-src="holder.js/232x155?bg=#dff0d8&fg=#3c763d"{{/if}} onerror="this.src='holder.js/232x155?bg=#dff0d8&fg=#3c763d';this.onerror=null" alt="{{title}}">
                </a>
              </div>
              <div class="col-md-8">
                <div class="lib-row lib-header">
                  <a href="/meetups/{{slug}}">
                    <h3 style="margin-top:0px;">{{title}}</h3>
                  </a>
                  <div class="lib-header-seperator"></div>
                  <p class="blog-post-meta">
                    <span class="glyphicon glyphicon-tag"></span> {{city}}
                  </p>
                </div>
                <div class="lib-row lib-desc">
                  {{short_desc}}
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <div class="row">
      <button class="btn btn-danger"  data-toggle="modal" data-target="#myModal">
        Can't find a meetup near you?
      </button>
    </div>

    {{> pagination}}
  </div>
</div>


