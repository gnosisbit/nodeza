
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Can't find a meetup group near you?</h4>
      </div>
      <div class="modal-body">
        <form class="form-horizontal" id="signup-form" action="/contact" method="POST"  >
          <input type="hidden" name="_csrf" value="{{_csrf}}" />
          <input type="hidden" name="_email" value="info@nodeza.co.za" />
          <input type="hidden" name="subject" value="Search: Message from NodeZA meetups page" />
          <div class="alert alert-info fade in" role="alert">
            The Node.js community is still growing in South Africa , leave your details and we'll contact you when a meetup group starts near you.
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="name">Name:</label>
            <div class="col-sm-7">
              <input class="form-control" type="text" name="name" id="name" placeholder="Your name" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="email">
              Email:
            </label>
            <div class="col-sm-7">
              <input class="form-control" type="email" name="email" id="email" placeholder="Your email address" required="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label" for="message">
              Location
            </label>
            <div class="col-sm-7">
              <textarea class="form-control" rows="5" name="message" id="message" placeholder="Your physical address" required=""></textarea>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-7">
              <button class="btn btn-success" type="submit">
                <span class="glyphicon glyphicon-check"></span> Submit
              </button>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

